<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".MainActivity6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear6_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:id="@+id/modelImage"
            android:src="@drawable/promax14"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>

        <TextView
            android:layout_below="@+id/modelImage"
            android:layout_gravity="center"
            android:id="@+id/modelNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsbold_e"
            android:textSize="25sp"
            android:text="모델명"
            android:layout_margin="30dp" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv6_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Apple"
            android:fontFamily="@font/nanumsbold"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_below="@id/tv6_1"
            android:id="@+id/linear6_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/color_choose">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/arrow_bottom"/>

                <Spinner
                    android:id="@+id/colorSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv6_2"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/tv6_2"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:text="색상"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsbold"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/GB_choose"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/arrow_bottom"/>

                <TextView
                    android:id="@+id/tv6_3"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:text="용량"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsbold"/>

                <Spinner
                    android:id="@+id/storageSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv6_3"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/month_choose"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:layout_gravity="center">'

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/arrow_bottom"/>

                <TextView
                    android:id="@+id/tv6_4"
                    android:layout_width="90dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:text="할부 개월"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsbold"/>

                <Spinner
                    android:id="@+id/monthSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv6_4"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear6_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/linear6_1"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:text=""
            android:gravity="right"
            android:id="@+id/tv6_5"
            android:textColor="@color/gray"
            android:layout_toRightOf="@id/tv6_7"
            android:fontFamily="@font/nanumsbold_e"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:textSize="12dp"
            android:text="기기 가격"
            android:id="@+id/tv6_7"
            android:fontFamily="@font/nanumsbold_e"/>

        <TextView
            android:layout_below="@+id/tv6_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:text="할부 금액"
            android:textSize="12dp"
            android:id="@+id/tv6_8"
            android:fontFamily="@font/nanumsbold_e"/>

        <TextView
            android:layout_below="@+id/tv6_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text=""
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/Installment"
            android:id="@+id/tv6_6"
            android:layout_toRightOf="@id/tv6_8"
            android:fontFamily="@font/nanumsbold_e"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="돌아가기"
            android:layout_below="@id/tv6_6"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</RelativeLayout>
