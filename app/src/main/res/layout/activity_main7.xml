<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginBottom="10dp"
        android:id="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6495ED"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_write_data"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsbold_e"
                android:text="1개월 실제 사용 정보를\n입력해주세요"
                android:bufferType="spannable"
                android:textSize="23dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:paddingLeft="120dp"
                    android:id="@+id/tv_explain"
                    android:fontFamily="@font/nanumsbold_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동 클릭 시 평균 3개월 사용량 반영"
                    android:textSize="10dp"
                    android:layout_margin="10dp" />

                <Button
                    android:layout_toRightOf="@+id/tv_explain"
                    android:fontFamily="@font/nanumsbold_e"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="수동"
                    android:textSize="10dp"
                    android:id="@+id/btn_hand_operated"
                    android:background="@android:color/transparent"/>

                <Button
                    android:fontFamily="@font/nanumsbold_e"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="자동"
                    android:textSize="10dp"
                    android:id="@+id/btn_automatic"
                    android:layout_toRightOf="@+id/btn_hand_operated"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>

            <SeekBar
                android:id="@+id/seekBar_data_usage"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:max="301"
                android:min="0"
                android:progressDrawable="@drawable/seekbar_data"
                android:thumb="@drawable/seekbar_tumb"
                app:layout_constraintBottom_toTopOf="@+id/seekBar_data_usage" />

            <TextView
                android:id="@+id/tv_print_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0GB"
                android:textSize="15dp"
                android:fontFamily="@font/nanumsbold_e"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/tv_write_sv"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/nanumsbold_e"
                android:bufferType="spannable"
                android:text="평소 이용 중이거나\n이용하고 싶었던 서비스를\n선택해주세요" />

            <HorizontalScrollView
                android:layout_marginBottom="30dp"
                android:id="@+id/scroll_ott"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imb_netflix"
                        android:padding="0dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/netflix_not_pick"/>

                    <ImageButton
                        android:id="@+id/imb_tving"
                        android:padding="0dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/tving_not_pick"/>

                    <ImageButton
                        android:id="@+id/imb_wavve"
                        android:padding="0dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/wavve_not_pick"/>

                    <ImageButton
                        android:id="@+id/imb_disney_plus"
                        android:padding="0dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/disney_not_pick"/>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_write_tel"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가정 내 사용 중인\n통신사를 입력하면\n더 자세한 할인 정보를\n알려드립니다"
                android:fontFamily="@font/nanumsbold_e"
                android:bufferType="spannable"
                android:textSize="20dp" />

            <LinearLayout
                android:gravity="center"
                android:id="@+id/linear_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="TV"
                    android:fontFamily="@font/nanumsbold_e"
                    android:id="@+id/tv_tv"/>

                <!--이미지 클릭시 use으로 바뀌도록 해야함-->
                <ImageButton
                    android:id="@+id/imb_not_use_tv"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="125dp"
                    android:layout_toRightOf="@+id/tv_tv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/not_use"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_tv2"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_below="@+id/linear_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/imb_tv_skt"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skt_not_pick" />

                <ImageButton
                    android:id="@+id/imb_tv_kt"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/imb_tv_skt"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kt_not_pick" />

                <ImageButton
                    android:layout_toRightOf="@+id/imb_tv_kt"
                    android:id="@+id/imb_tv_lg"
                    android:padding="0dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"
                    android:src="@drawable/uplus_not_pick"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_internet"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="인터넷"
                    android:fontFamily="@font/nanumsbold_e"
                    android:id="@+id/internet"/>

                <ImageButton
                    android:id="@+id/imb_not_use_internet"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/not_use" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_internet2"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_margin="5dp"
                    android:id="@+id/imb_internet_skt"
                    android:padding="0dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skt_not_pick" />

                <ImageButton
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/imb_internet_skt"
                    android:id="@+id/imb_internet_kt"
                    android:padding="0dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kt_not_pick" />

                <ImageButton
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/imb_internet_kt"
                    android:id="@+id/imb_internet_lg"
                    android:padding="0dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/uplus_not_pick" />

            </LinearLayout>

            <TextView
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:id="@+id/tv_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족 구성원의 통신사를\n선택해주세요"
                android:fontFamily="@font/nanumsbold_e"
                android:bufferType="spannable"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/family_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imb_family1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:scaleType="fitCenter"
                        android:padding="0dp"
                        android:src="@drawable/user"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_family1"
                        android:layout_below="@+id/imb_family1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구성원 1"
                        android:fontFamily="@font/nanumsbold_e"
                        android:textSize="10dp" />

                    <Spinner
                        android:layout_marginLeft="55dp"
                        android:layout_below="@+id/tv_family1"
                        android:id="@+id/spinner_family1"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginRight="15dp"
                    android:id="@+id/family_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imb_family2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:scaleType="fitCenter"
                        android:padding="0dp"
                        android:src="@drawable/user"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_family2"
                        android:layout_below="@+id/imb_family2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구성원 2"
                        android:fontFamily="@font/nanumsbold_e"
                        android:textSize="10dp" />

                    <Spinner
                        android:layout_marginLeft="55dp"
                        android:layout_below="@+id/tv_family2"
                        android:id="@+id/spinner_family2"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginRight="15dp"
                    android:id="@+id/family_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imb_family3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:scaleType="fitCenter"
                        android:padding="0dp"
                        android:src="@drawable/user"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_family3"
                        android:layout_below="@+id/imb_family3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구성원 3"
                        android:fontFamily="@font/nanumsbold_e"
                        android:textSize="10dp" />

                    <Spinner
                        android:layout_marginLeft="55dp"
                        android:layout_below="@+id/tv_family3"
                        android:id="@+id/spinner_family3"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:textSize="15dp"
                android:layout_marginLeft="140dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>