<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRecommend"
    android:background="#f5f5f5">

    <ImageButton
        android:id="@+id/imb_first"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#ffffff"
        android:layout_marginBottom="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_current_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 이용 중인 요금제"
            android:textSize="25dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/nanumsbold_e" />

        <TextView
            android:layout_below="@+id/tv_current_use"
            android:id="@+id/tv_current_sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요금제 이름"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/nanumsbold_e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_current_sub_name">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imv_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/imv_price" />

                <TextView
                    android:id="@+id/tv_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsbold_e"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imv_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/imv_data" />

                <TextView
                    android:id="@+id/tv_data_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="데이터량"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsbold_e"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"/>
            </RelativeLayout>

            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/imv_telecom"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/freet_logo" />

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imb_second"
        android:layout_below="@+id/imb_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />

</RelativeLayout>
